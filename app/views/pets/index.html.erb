
<div class="">
            <div class="page-title">
              <div class="title_left">
                <h3>Administrador de Mascotas</h3>
              </div>

              
            </div>

            <div class="clearfix"></div>

            <div class="row">
              <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                  <div class="x_title">
                    <h2>Mascotas</h2>
                    <ul class="nav navbar-right panel_toolbox">
                      <%= link_to 'Nuevo', new_pet_path, :class => "btn btn-round btn-success"%>
                    </ul>
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">

                    <table class="table">
                      <thead>
                        <tr>
                          <th>#</th>
                          <th>Nombre Propietario</th>
                          <th>Nombre Mascota</th>
                          <th>Especie</th>
                          <th>Raza</th>
                          <th>Sexo</th>
                          <th>Peso(Kg)</th>
                          <th>Fecha de Nacimiento</th>
                          <th>Opciones</th>
                        </tr>
                      </thead>
                      <tbody>
                        <%- item = 1 %>
                        <%- @pets.each do |p|  %>
                          <tr>
                            <td><%= item %></td>
                            <td><%= p.ownerPet%></td> 
                            <td><%= p.namePet %></td>
                            <td><%= p.specie %></td> 
                            <td><%= p.breed_id %></td> 
                            <td><%= p.sex %></td> 
                            <td><%= p.weight %></td> 
                            <td><%= p.birthdate %></td> 
                            <td><%= link_to "Editar", edit_pet_path(p), :class => "btn btn-info btn-xs" %> 
                            <%= link_to "Eliminar", pet_path(p), :method => :DELETE, data: {confirm: 'Esta seguro?'}, :class => "btn btn-danger btn-xs" %>
                            </td>
                          </tr>
                          <%- item = item + 1 %>
                        <% end %>
                      </tbody>
                    </table>

                  </div>
                </div>
              </div>

            </div>
          </div>