 <%= form_for @pet, :html => {:class => 'form-horizontal form-label-left', :id => 'demo-form2'} do |f| %>

    <div class="form-group">
      <%= f.label :ownerPet, "Nombre del Propietario", :class => "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :ownerPet, :class => "form-control col-md-7 col-xs-12" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :namePet, "Nombre de la Mascota", :class => "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :namePet, :class => "form-control col-md-7 col-xs-12" %>
      </div>
    </div>

    <div class="form-group">

      <%= f.label :specie, "Especie", :class => "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12"> 

        <% listaS = {'Felino' => 'Felino', 'Canino' => 'Canino'}%>
              <%= f.select :specie, listaS, {:class => "form-control col-md-7 col-xs-12"}%>

      </div>
    </div>

    <div class="form-group">

      <%= f.label :sex, "Sexo", :class => "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12"> 

        <% listaS = {'Macho' => 'Macho', 'Hembra' => 'Hembra'}%>
              <%= f.select :sex, listaS, {:class => "form-control col-md-7 col-xs-12"}%>

      </div>
    </div>

    <div class="form-group">
      <%= f.label :raza, "Raza", :class => "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        
        <%= collection_select(:pet, :breed_id, Breed.all, :id, :name, prompt: true)%>
        
      </div>
    </div>

    <div class="form-group">

      <%= f.label :birthdate, "Fecha de Nacimiento", :class => "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12">

        <%= f.date_field :birthdate, class: 'special_input'%>


      </div>
    </div>

    <div class="form-group">
      <%= f.label :weight, "Peso(Kg)", :class => "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_area :weight, :class => "form-control col-md-7 col-xs-12" %>
      </div>
    </div>


      <div class="ln_solid"></div>

      <div class="form-group">
        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
          <%= link_to 'Cancelar', pets_path, :class => "btn btn-primary"%>
          <%= f.submit "Guardar", :class => "btn btn-success" %>
        </div>
      </div>

  <% end %>